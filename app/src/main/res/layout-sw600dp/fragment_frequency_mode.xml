<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin" >

    <View
        android:id="@+id/label_1"
        android:layout_width="0dp"
        android:layout_height="@dimen/white_key_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/label_2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:background="@drawable/white_keys_bg"
        tools:layout_editor_absoluteX="-15dp"
        android:elevation="6dp"
        android:clickable="true"/>

    <View
        android:id="@+id/label_2"
        android:layout_width="0dp"
        android:layout_height="@dimen/white_key_height"
        app:layout_constraintStart_toEndOf="@id/label_1"
        app:layout_constraintEnd_toStartOf="@+id/label_3"
        app:layout_constraintTop_toTopOf="@+id/label_1"
        android:background="@drawable/white_keys_bg"
        tools:layout_editor_absoluteX="-15dp"
        android:elevation="6dp"
        android:clickable="true" />

    <View
        android:id="@+id/label_3"
        android:layout_width="0dp"
        android:layout_height="@dimen/white_key_height"
        app:layout_constraintStart_toEndOf="@+id/label_2"
        app:layout_constraintEnd_toStartOf="@+id/label_4"
        app:layout_constraintTop_toTopOf="@+id/label_1"
        android:background="@drawable/white_keys_bg"
        tools:layout_editor_absoluteX="-15dp"
        android:elevation="6dp"/>

    <View
        android:id="@+id/label_4"
        android:layout_width="0dp"
        android:layout_height="@dimen/white_key_height"
        app:layout_constraintStart_toEndOf="@+id/label_3"
        app:layout_constraintEnd_toEndOf="@+id/label_5"
        app:layout_constraintTop_toTopOf="@+id/label_1"
        android:background="@drawable/white_keys_bg"
        tools:layout_editor_absoluteX="-15dp"
        android:elevation="6dp" />

    <View
        android:id="@+id/label_5"
        android:layout_width="0dp"
        android:layout_height="@dimen/white_key_height"
        app:layout_constraintStart_toEndOf="@+id/label_4"
        app:layout_constraintEnd_toStartOf="@+id/label_6"
        app:layout_constraintTop_toTopOf="@+id/label_1"
        android:background="@drawable/white_keys_bg"
        tools:layout_editor_absoluteX="-15dp"
        android:elevation="6dp" />

    <View
        android:id="@+id/label_6"
        android:layout_width="0dp"
        android:layout_height="@dimen/white_key_height"
        app:layout_constraintStart_toEndOf="@+id/label_5"
        app:layout_constraintEnd_toStartOf="@+id/label_7"
        app:layout_constraintTop_toTopOf="@+id/label_1"
        android:background="@drawable/white_keys_bg"
        tools:layout_editor_absoluteX="-15dp"
        android:elevation="6dp" />

    <View
        android:id="@+id/label_7"
        android:layout_width="0dp"
        android:layout_height="@dimen/white_key_height"
        app:layout_constraintStart_toEndOf="@+id/label_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/label_1"
        android:background="@drawable/white_keys_bg"
        tools:layout_editor_absoluteX="-15dp"
        android:elevation="6dp" />

    <TextView
        android:id="@+id/label_8"
        android:layout_width="@dimen/black_key_width"
        android:layout_height="@dimen/black_key_height"
        app:layout_constraintTop_toTopOf="@+id/label_1"
        app:layout_constraintLeft_toLeftOf="@+id/label_2"
        app:layout_constraintRight_toRightOf="@+id/label_1"
        android:background="@drawable/black_keys_bg"
        android:elevation="9dp"
        android:clickable="true"/>

    <TextView
        android:id="@+id/label_9"
        android:layout_width="@dimen/black_key_width"
        android:layout_height="@dimen/black_key_height"
        app:layout_constraintTop_toTopOf="@+id/label_2"
        app:layout_constraintLeft_toLeftOf="@+id/label_3"
        app:layout_constraintRight_toLeftOf="@+id/label_3"
        android:background="@drawable/black_keys_bg"
        android:elevation="9dp"
        android:clickable="true"/>

    <TextView
        android:id="@+id/label_10"
        android:layout_width="@dimen/black_key_width"
        android:layout_height="@dimen/black_key_height"
        app:layout_constraintTop_toTopOf="@+id/label_4"
        app:layout_constraintLeft_toLeftOf="@+id/label_5"
        app:layout_constraintRight_toLeftOf="@+id/label_5"
        android:background="@drawable/black_keys_bg"
        android:elevation="9dp"
        android:clickable="true"/>

    <TextView
        android:id="@+id/label_11"
        android:layout_width="@dimen/black_key_width"
        android:layout_height="@dimen/black_key_height"
        app:layout_constraintTop_toTopOf="@+id/label_5"
        app:layout_constraintLeft_toLeftOf="@+id/label_6"
        app:layout_constraintRight_toLeftOf="@+id/label_6"
        android:background="@drawable/black_keys_bg"
        android:elevation="9dp"
        android:clickable="true"/>

    <TextView
        android:id="@+id/label_12"
        android:layout_width="@dimen/black_key_width"
        android:layout_height="@dimen/black_key_height"
        app:layout_constraintTop_toTopOf="@+id/label_6"
        app:layout_constraintLeft_toLeftOf="@+id/label_7"
        app:layout_constraintRight_toLeftOf="@+id/label_7"
        android:background="@drawable/black_keys_bg"
        android:elevation="9dp"
        android:clickable="true"/>

    <TextView
        android:id="@+id/textView5"
        android:text="Volume"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/label_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/seek_bar_volume" />

    <SeekBar
        android:id="@+id/seek_bar_volume"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="90"
        style="@style/Widget.AppCompat.SeekBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintEnd_toStartOf="@+id/frequency_volume"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/frequency_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/seek_bar_volume"
        app:layout_constraintTop_toTopOf="@id/seek_bar_volume"
        app:layout_constraintBottom_toBottomOf="@id/seek_bar_volume"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="@dimen/cardview_horizontal_padding"
        android:text="90"/>
</android.support.constraint.ConstraintLayout>