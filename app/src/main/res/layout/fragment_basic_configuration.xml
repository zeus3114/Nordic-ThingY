<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                style="@style/PreferenceCategoryLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/PreferenceCategoryTitle"
                    android:text="@string/settings_basic_thingy" />

                <LinearLayout
                    android:id="@+id/category_device_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_label"
                        android:padding="16dp"
                        android:layout_gravity="center_vertical" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:minHeight="@dimen/preference_category_height"
                        android:gravity="center_vertical">

                        <TextView
                            android:text="@string/settings_thingy_name"
                            style="@style/PreferenceCategory" />

                        <TextView
                            android:id="@+id/category_device_name_summary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/PreferenceCategorySummary" />

                    </LinearLayout>

                </LinearLayout>

                <View style="@style/PreferenceCategoryDivider" />

                <LinearLayout
                    android:id="@+id/category_adv_param_char"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/preference_category_height"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_advertising_param"
                        android:padding="16dp"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        style="@style/PreferenceCategory"
                        android:text="@string/settings_adv_param_char" />

                </LinearLayout>

                <View style="@style/PreferenceCategoryDivider" />

                <LinearLayout
                    android:id="@+id/category_connection_param_char"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/preference_category_height"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_bluetooth_connection"
                        android:padding="16dp"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        style="@style/PreferenceCategory"
                        android:text="@string/settings_connection_param_char" />
                </LinearLayout>

                <View style="@style/PreferenceCategoryDivider" />

                <LinearLayout
                    android:id="@+id/category_eddystone_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_physical_web"
                        android:padding="16dp"
                        android:layout_gravity="center_vertical" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:minHeight="72dp"
                        android:gravity="center_vertical">

                        <TextView
                            style="@style/PreferenceCategory"
                            android:text="@string/settings_eddystone_url" />

                        <TextView
                            android:id="@+id/category_eddystone_url_summary"
                            style="@style/PreferenceCategorySummary"
                            android:autoLink="web"
                            android:linksClickable="true" />

                    </LinearLayout>

                </LinearLayout>

                <View style="@style/PreferenceCategoryDivider" />

                <View style="@style/PreferenceCategoryDivider" />

                <LinearLayout
                    android:id="@+id/category_fw_version"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_thingy_light_gray"
                        android:padding="16dp"
                        android:layout_gravity="center_vertical" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:minHeight="72dp"
                        android:gravity="center_vertical">

                        <TextView
                            style="@style/PreferenceCategory"
                            android:text="@string/settings_fw_version" />

                        <TextView
                            android:id="@+id/category_fw_version_summary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/PreferenceCategorySummary" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                style="@style/PreferenceCategoryLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/PreferenceCategoryTitle"
                    android:text="@string/settings_thingy_cloud" />

                <LinearLayout
                    android:id="@+id/category_motion_temperature_interval"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/preference_category_height"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_cloud_upload"
                        android:padding="16dp"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        style="@style/PreferenceCategory"
                        android:text="@string/coming_soon" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>