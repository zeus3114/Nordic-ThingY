<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/led_color_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/sound_sample_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="1"
        android:gravity="center"
        android:background="@drawable/ic_bg_sound"
        android:layout_margin="@dimen/sample_picker_padding" />

    <TextView
        android:id="@+id/sound_sample_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="2"
        android:gravity="center"
        android:background="@drawable/ic_bg_sound"
        android:layout_margin="@dimen/sample_picker_padding"
        android:layout_toRightOf="@id/sound_sample_1" />

    <TextView
        android:id="@+id/sound_sample_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="3"
        android:gravity="center"
        android:background="@drawable/ic_bg_sound"
        android:layout_margin="@dimen/sample_picker_padding"
        android:layout_toRightOf="@id/sound_sample_2" />

    <TextView
        android:id="@+id/sound_sample_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="4"
        android:gravity="center"
        android:background="@drawable/ic_bg_sound"
        android:layout_margin="@dimen/sample_picker_padding"
        android:layout_below="@id/sound_sample_1" />

    <TextView
        android:id="@+id/sound_sample_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="5"
        android:gravity="center"
        android:background="@drawable/ic_bg_sound"
        android:layout_margin="@dimen/sample_picker_padding"
        android:layout_below="@id/sound_sample_2"
        android:layout_toRightOf="@id/sound_sample_4" />

    <TextView
        android:id="@+id/sound_sample_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="6"
        android:gravity="center"
        android:background="@drawable/ic_bg_sound"
        android:layout_margin="@dimen/sample_picker_padding"
        android:layout_below="@id/sound_sample_3"
        android:layout_toRightOf="@id/sound_sample_5" />

    <TextView
        android:id="@+id/sound_sample_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="7"
        android:gravity="center"
        android:background="@drawable/ic_bg_sound"
        android:layout_margin="@dimen/sample_picker_padding"
        android:layout_below="@id/sound_sample_4" />

    <TextView
        android:id="@+id/sound_sample_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="8"
        android:gravity="center"
        android:background="@drawable/ic_bg_sound"
        android:layout_margin="@dimen/sample_picker_padding"
        android:layout_below="@id/sound_sample_5"
        android:layout_toRightOf="@id/sound_sample_7" />

    <TextView
        android:id="@+id/sound_sample_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="9"
        android:gravity="center"
        android:background="@drawable/ic_bg_sound"
        android:layout_margin="@dimen/sample_picker_padding"
        android:layout_below="@id/sound_sample_6"
        android:layout_toRightOf="@id/sound_sample_8" />

</RelativeLayout>