<resources>

    <style name="AppTheme" parent="@style/AppThemeBase">
        <!-- Empty -->
    </style>
    <!-- Base application theme. -->
    <style name="AppThemeBase" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="actionMenuTextColor">@color/actionBarMenuTextColor</item>
        <item name="alertDialogTheme">@style/AppTheme.DialogTheme</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionMenuTextColor">@color/textColorSecondary</item>
    </style>
    `

    <color name="actionBarMenuTextColor">#ffffff</color>

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ActionBarThemeOverlay" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">#000</item>
        <item name="android:textColorSecondary">#8fff</item>
        <item name="colorControlNormal">@color/textColorWhite</item>
        <item name="colorControlHighlight">#3fff</item>
    </style>

    <style name="ActionBarThemeOverlayCard" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">#000</item>
    </style>

    <style name="HeaderBar">
        <item name="android:background">?colorPrimary</item>
    </style>

    <style name="HeaderBarCardView">
        <item name="android:background">@android:color/white</item>
    </style>
    <!-- Style used by the Toolbar -->
    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Cardview.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Cardview.TitleTextDisabled" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/disabledBgColouor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CardviewData" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/textColorBlack</item>
        <item name="android:textSize">@dimen/card_view_data_text_size</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.TranslucentStatusBar">
        <!-- Empty -->
    </style>

    <style name="AppTheme.Translucent">
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="Widget" />

    <style name="Widget.ScannerSubtitle">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/textColorWhite</item>
    </style>

    <style name="EditTextHintStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="StepperTitleTextStyle">
        <item name="android:color">@color/textColorBlack</item>
        <item name="android:textSize">@dimen/stepper_title_text_size</item>
    </style>

    <style name="AppTheme.DialogTheme" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionModeBackground">@color/actionMode</item>
        <item name="actionMenuTextColor">@color/textColorWhite</item>
        <item name="actionBarTheme">@style/ActionModeThemeOverlay</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:keyTextSize">50sp</item>
    </style>

    <style name="ActionModeThemeOverlay" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/textColorWhite</item>
    </style>

    <style name="PreferenceCategoryLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/settings_divider</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="PreferenceCategoryTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="PreferenceCategory">
        <item name="android:textColor">#757575</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawablePadding">32dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="PreferenceCategoryDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@drawable/list_divider_holo_light</item>
        <item name="android:layout_marginLeft">72dp</item>
    </style>

    <style name="PreferenceCategorySummary">
        <item name="android:textColor">#757575</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="DfuDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@drawable/list_divider_holo_light</item>
    </style>

    <style name="DfuProgressBar" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:minHeight">8dip</item>
        <item name="android:maxHeight">8dip</item>
    </style>

    <style name="RedSlider" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">#FFFF0000</item>
    </style>

</resources>
